      <%= form_for(@user, url: yield(:url)) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <label for="account_id"><span class="badge badge-danger">必須</span> 会員ID </label>
          <%= f.text_field :account_id, class: "form-control", placeholder: "半角英数字6字以上15字以内" %>
        </div>
        <div class="form-group">
          <label for="name"><span class="badge badge-danger">必須</span> 氏名（本名でご登録ください） </label>
          <%= f.text_field :name, class: "form-control", placeholder: "25文字以内(半角・全角問わず)" %>
        </div>
        <div class="form-group">
          <label for="email"><span class="badge badge-danger">必須</span> メールアドレス </label>
          <%= f.email_field :email, class: "form-control", placeholder: "例：raffaello@jungleocean.com" %>
        </div>
        <div class="form-group">
          <label for="password"><span class="badge badge-danger">必須</span> パスワード </label>
          <%= f.password_field :password, class: "form-control", placeholder: "半角英数字6字以上15字以内" %>
        </div>
        <div class="form-group">
          <label for="password_cofirmation"><span class="badge badge-danger">必須</span> パスワード（確認用） </label>
          <%= f.password_field :password_cofirmation, class: "form-control", placeholder: "上と同じパスワードを入力してください" %>
        </div>

        <%= f.submit yield(:button_text) , class: "btn btn-primary"  %>

      <% end %>